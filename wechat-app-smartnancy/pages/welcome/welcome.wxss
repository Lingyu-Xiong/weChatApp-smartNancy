/**index.wxss**/
page{
  background: -webkit-linear-gradient(#e5f7fe, #fff); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#e5f7fe, #fff); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#e5f7fe, #fff); /* Firefox 3.6 - 15 */
  background: linear-gradient(#e5f7fe, #fff); /* 标准的语法（必须放在最后） */
 height:100%
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
   border:0;
  background: unset;
  line-height: unset;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-blue{
  width: 100%;
	height: 50px;
  line-height: 50px;
  font-size: 16px;
  background: #2fcc85;
	color: #fff;
  position: fixed;
  bottom: 0;
  text-align: center;
}
.btn-gray{
  width: 90%;
	line-height: 88rpx;
  background: #CCCCCC;
	color: #fff;
  margin-top: 20px;
}
.other-button-hover {
  background-color: rgba(0, 0, 0, 0.1); 
  opacity: 0.7;
}
.nextbtn{
  width:100%;
  position: fixed;
  bottom: 0;
  text-align: center;
}

.userinfo::after{
  border:0
}
