.page{
  background: -webkit-linear-gradient(#e5f7fe, #fff); /* Safari 5.1 - 6.0 */
background: -o-linear-gradient(#e5f7fe, #fff); /* Opera 11.1 - 12.0 */
background: -moz-linear-gradient(#e5f7fe, #fff); /* Firefox 3.6 - 15 */
background: linear-gradient(#e5f7fe, #fff); /* 标准的语法（必须放在最后） */
font-size: 16px;
font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.img-box{
  width: 100%;
  text-align: center;
  margin-bottom: 0;

}
.page__hd {
    padding: 40px;
    padding-top:0
}
.page__bd {
    padding-bottom: 15px;
}
.page__bd_spacing {
    padding-left: 45px;
    padding-right: 45px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 16px;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}
.mini-btn{
    margin-right: 5px;
}

.weui-btn{
  display: flex;
  width:90%;
  height: 100%;
  color:#2fcc85;
  margin-top:0px;
  font-size: 14px;
  margin-bottom: 10px;
  justify-content: center;
  align-items: center

}
.btngreen.weui-btn{
  background-color: #2fcc85;
  color:#fff;
  border:none;
}

.weui-cell{
  color:#888;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}
.weui-label{
width:auto;
font-size: 12px
}
.weui-input{
  width: 100%;
  height:2.2em;
  margin: 0 auto;
  border-bottom: 1px solid #888;
  color: #888;
  text-align: center;
  font-size: 12px;
}
.hide{
  display:none !important;
}
.form{
  margin-bottom: 70px
}
.next{
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  background-color: #2fcc85;
  color: #fff;
  position: fixed;
  bottom: 0;
  text-align: center;
}
.nextbtn{
  width:100%;
  position: fixed;
  bottom: 0;
  text-align: center;
}
.weui-flex{
  display:-webkit-box;
  display: -webkit-flex;
  display: flex; 
  flex-direction: row ;
  flex-wrap: wrap;
  justify-content: space-around;
}
.weui-flex__item{
  margin-bottom: 10px;
  display:-webkit-box;
 
  flex-wrap:wrap;
  flex-direction: row;
  justify-content:  space-around;
}

.disease-view{
 display: flex;
  float:left;
  width: 49%;
  height: 70px;
  margin-bottom: 10px;
